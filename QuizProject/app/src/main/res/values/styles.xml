<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
   </style>

    <style name="radio_button">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimension_four</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="question_radio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimension_four</item>
        <item name="android:layout_marginLeft">@dimen/dimension_eight</item>
        <item name="android:padding">@dimen/dimension_four</item>
    </style>

    <style name="question_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="submit_answer_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/single_answer_m_layout</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:padding">@dimen/dimension_eight</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Linear_Layout_Parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimension_eight</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="login_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="login_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimension_four</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="login_userid_editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimension_four</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="login_password_editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">8</item>
        <item name="android:padding">@dimen/dimension_four</item>
        <item name="android:password">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="login_verification_editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">4</item>
        <item name="android:padding">@dimen/dimension_four</item>
        <item name="android:paddingLeft">@dimen/dimension_four</item>
        <item name="android:paddingRight">@dimen/dimension_four</item>
        <item name="android:password">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="signup_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="login_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="recovery_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/holo_purple</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="mobile_edittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">@dimen/dimension_four</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="score_question_no">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dimension_eight</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="score_question_status">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
